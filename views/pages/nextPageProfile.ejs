<form action="/nextPageProfile" method="POST" enctype="multipart/form-data" class="max-w-xl mx-auto bg-white shadow-md rounded-lg p-8 space-y-6">
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1" for="profileImage">Profile Image</label>
    <input id="profileImageInput" type="file" name="profileImage" accept="image/*" required
      class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
    
    <!-- Preview image -->
    <div class="mt-4">
      <img id="imagePreview" src="/uploads/profile.png" alt="Image "
        class="w-32 h-32 rounded-full object-cover mx-auto shadow">
    </div>
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1" for="firstName">First Name</label>
    <input type="text" name="firstName" placeholder="Enter your first name" required
      class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1" for="lastName">Last Name</label>
    <input type="text" name="lastName" placeholder="Enter your last name" required
      class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
  </div>

  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1" for="dob">Date of Birth</label>
    <input type="date" name="dob" required
      class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
  </div>

  <button type="submit"
    class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition">Next</button>
</form>

<link
  href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
  rel="stylesheet"
/>
<script src="/js/profilepreview.js"></script>