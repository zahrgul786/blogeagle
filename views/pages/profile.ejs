
<%- include('../partials/header.ejs')  %>

<section class="min-h-screen bg-gray-100 py-6 px-4 sm:px-6 lg:px-8">
  <!-- Profile Section -->
  <div class="max-w-7xl mx-auto bg-white shadow-xl rounded-xl overflow-hidden">
    <div class="flex flex-col items-center md:flex-row md:items-start p-8 space-y-6 md:space-y-0 md:space-x-8">
      <!-- Profile Image -->
      <div class="w-40 h-40 rounded-full overflow-hidden border-4 border-gray-200 shadow-xl transition transform hover:scale-110">
        <img
          src="<%= profile.profileImage || '/uploads/default-profile.jpg' %>"
          alt="Profile Picture"
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Profile Info -->
      <div class="flex-1 text-center md:text-left">
        <h1 class="text-3xl font-semibold text-gray-800 mb-2 mt-20 tracking-wide">
          <%= profile.firstName %> <%= profile.lastName %>
        </h1>
        <p class="text-gray-500 text-sm">@<%= user.username %></p>
        <p class="text-gray-700 mt-3">
          <span class="font-bold">Bio:</span> Passionate about storytelling, creativity, and sharing ideas. Welcome to my digital space.
        </p>

        <!-- Edit Profile Button -->
        <a
          href="/nextPageProfile"
          class="inline-block bg-gradient-to-r from-purple-600 to-blue-500 hover:from-blue-500 hover:to-purple-600 text-white px-6 py-2 mt-4 rounded-full text-sm transition-all hover:scale-105 shadow-lg"
        >
          Edit Profile
        </a>
      </div>
    </div>
  </div>

  <!-- Blogs Section -->
  <section class="py-2">
    <!-- Blog Title -->
    <h1 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 to-blue-500 mb-2 mt-20 ml-80 text-center">
      Your Blogs
    </h1>

    <% if (blogs.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% blogs.forEach(blog => { %>
          <div class="bg-white shadow-lg rounded-xl p-6 space-y-4 hover:shadow-2xl transition-shadow transform hover:scale-105">
            <!-- Blog Title -->
            <h2 class="text-xl font-semibold text-gray-800 hover:text-blue-600 transition-all">
              <a href="/blog/<%= blog._id %>" class="hover:underline text-gray-800"><%= blog.title %></a>
            </h2>
            <p class="text-gray-500 text-sm">By <%= profile.firstName %> | <%= blog.date.toDateString() %></p>
            <img src="<%= blog.image %>" alt="<%= blog.title %>" class="h-48 w-full object-cover rounded-lg transition-transform transform hover:scale-105" />
            <p class="text-gray-700 text-base"><%- blog.content.substring(20, 100) %>...</p>
              <p class="text-gray-500 text-sm">
  üëÅÔ∏è <%= blog.views %> views
</p>
          </div>
          
        <% }) %>
        
      </div>
    <% } else { %>
      <p class="text-gray-500 text-center">You haven't written any blogs yet. Start writing and share your ideas!</p>
    <% } %>
  </section>
</section>
<%- include('../partials/footer.ejs')  %>
